<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <welcome-file-list>
        <welcome-file>start</welcome-file>
    </welcome-file-list>


    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>am.basic.jdbcStart.controller.LoginServlet</servlet-class>
    </servlet>
    ​
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>Comment</servlet-name>
        <servlet-class>am.basic.jdbcStart.controller.AddCommentServlet</servlet-class>
    </servlet>
    ​
    <servlet-mapping>
        <servlet-name>Comment</servlet-name>
        <url-pattern>/secure/add-comment</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Delete</servlet-name>
        <servlet-class>am.basic.jdbcStart.controller.DeleteCommentServlet</servlet-class>
    </servlet>
    ​
    <servlet-mapping>
        <servlet-name>Delete</servlet-name>
        <url-pattern>/secure/delete-comment</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>ChangeSystemServlet</servlet-name>
        <servlet-class>am.basic.jdbcStart.controller.PasswordChangeServlet</servlet-class>
    </servlet>
    ​
    <servlet-mapping>
        <servlet-name>ChangeSystemServlet</servlet-name>
        <url-pattern>/ch</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>am.basic.jdbcStart.controller.LogoutServlet</servlet-class>
    </servlet>
    ​
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>PasswordForgetServlet</servlet-name>
        <servlet-class>am.basic.jdbcStart.controller.PasswordForgetServlet</servlet-class>
    </servlet>
    ​
    <servlet-mapping>
        <servlet-name>PasswordForgetServlet</servlet-name>
        <url-pattern>/forget-password</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>VerificationServlet</servlet-name>
        <servlet-class>am.basic.jdbcStart.controller.VerificationServlet</servlet-class>
    </servlet>
    ​
    <servlet-mapping>
        <servlet-name>VerificationServlet</servlet-name>
        <url-pattern>/verify</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>RecoverPasswordServlet</servlet-name>
        <servlet-class>am.basic.jdbcStart.controller.RecoverPasswordServlet</servlet-class>
    </servlet>
    ​
    <servlet-mapping>
        <servlet-name>RecoverPasswordServlet</servlet-name>
        <url-pattern>/recover-password</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>RegisterSystem</servlet-name>
        <servlet-class>am.basic.jdbcStart.controller.RegisterServlet</servlet-class>
    </servlet>
    ​
    <servlet-mapping>
        <servlet-name>RegisterSystem</servlet-name>
        <url-pattern>/reg</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>ResendCode</servlet-name>
        <servlet-class>am.basic.jdbcStart.controller.SendCodeAnewServlet</servlet-class>
    </servlet>
    ​
    <servlet-mapping>
        <servlet-name>ResendCode</servlet-name>
        <url-pattern>/resend</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>Cookie</servlet-name>
        <servlet-class>am.basic.jdbcStart.controller.CookieTestServlet</servlet-class>
    </servlet>
    ​
    <servlet-mapping>
        <servlet-name>Cookie</servlet-name>
        <url-pattern>/cook</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>St</servlet-name>
        <servlet-class>am.basic.jdbcStart.controller.StartServlet</servlet-class>
    </servlet>
    ​
    <servlet-mapping>
        <servlet-name>St</servlet-name>
        <url-pattern>/start</url-pattern>
    </servlet-mapping>


    <filter>
        <filter-name>Fil</filter-name>
        <filter-class>am.basic.jdbcStart.filter.AuthorizationFilter</filter-class>
    </filter>
    ​
    <filter-mapping>
        <filter-name>Fil</filter-name>
        <url-pattern>/secure/*</url-pattern>
    </filter-mapping>


    <filter>
        <filter-name>Debug</filter-name>
        <filter-class>am.basic.jdbcStart.filter.DebugFilter</filter-class>
    </filter>
    ​
    <filter-mapping>
        <filter-name>Debug</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

</web-app>